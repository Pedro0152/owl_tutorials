<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.todoList" owl="1">
        <div>
        <input type="text" class="form-control mb-3" placeholder="Enter a new task." t-on-keyup="addTodo" t-ref="inputTodo"/>
        </div>
        <p t-foreach="todos" t-as="todo" t-key="todo.id">
        <Todo todo="todo" toggleState.bind="toggleTodo" removeState.bind="removeTodo"/>
        </p>

    </t>

</templates>