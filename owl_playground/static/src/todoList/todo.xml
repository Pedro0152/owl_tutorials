<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.todo" owl="1">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" t-att-id="props.todo.id" t-att-checked="props.todo.done" t-on-change="onChange"/>
            <label t-att-for="props.todo.id" t-att-class="props.todo.done ? 'text-decoration-line-through text-muted' : '' ">
                <t t-esc="props.todo.id"/>.
                <t t-esc="props.todo.description"/>
            </label>
            <span class="fa fa-remove cursor-pointer" t-on-click="onClick"/>
        </div>
    </t>

</templates>
