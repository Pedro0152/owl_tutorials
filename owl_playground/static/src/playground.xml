<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.playground" owl="1">
        <div class="p-3">
            hello world
        </div>
            <Counter onChange.bind="incrementSum" />
        <Card title="'card 1'">
            content of card 1
        </Card>
        <Card title="'card 2'">
            <div class="inline">
            <Counter onChange.bind="incrementSum" />
            <Counter onChange.bind="incrementSum" />
            </div>
            <div>The sum is: <t t-esc="sum.value"/></div>
        </Card>
        <TodoList/>
        <Notebook>
          <t t-set-slot="page1" title.translate="Page 1">
            <div>this is in the page 1</div>
          </t>
            <t t-set-slot="page2" title.translate="Page 2" hidden="somevalue">
            <div>this is in the page 2</div>
          </t>
        </Notebook>
    </t>
</templates>
